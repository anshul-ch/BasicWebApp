@model List<WebApplication1.Models.Student>
@{
    ViewData["Title"] = "Student List";
}

<div class="container">
    <h1 class="display-4">Submitted Students</h1>
    <hr />

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Name</td>
                        <td>@Model[i].Email</td>
                        <td>@Model[i].Message</td>
                    </tr>
                }
            </tbody>
        </table>
        <p class="text-muted">Total Students: @Model.Count</p>
    }
    else
    {
        <div class="alert alert-info">
            No students have been submitted yet.
        </div>
    }

    <a asp-action="Index" class="btn btn-primary">Back to Form</a>
</div>
